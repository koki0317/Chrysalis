<%= simple_form_for goal do |f| %>
  <div class="checkbox-animation">
    <input type="checkbox" data-completed-goals-target="checkbox" id="todo" name="todo" value="todo" onchange="edit_user_goal_<%= goal.id %>.submit()">
    <label class="align-middle" for="todo" data-content="<%= goal.description %>"><%= goal.description %></label>
  </div>
  <% if goal.done? %>
    <%= f.input :status, wrapper_html: {class: "my-0 position-absolute"}, as: :hidden, input_html: { value: 'active'} %>
  <% else %>
    <%= f.input :status, wrapper_html: {class: "my-0 position-absolute"}, as: :hidden, input_html: { value: 'done'} %>
  <% end %>
<% end %>
